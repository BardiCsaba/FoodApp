<%- include('header') -%>

<div class="content">
    <div class="row">
        <div class="col-12">
            <table class="table" style="width: 700px; display: block;">
              <tr>
                <a href="/food/new">
                  <button type="button" class="btn btn-danger">Új étel</button>
                </a>
                &nbsp&nbsp&nbsp
                <a href="/">
                  <button type="button" class="btn btn-danger">Menü</button>
                </a>
              </tr>
              <tr>
                <h1>Ételek</h1>
              </tr>
                <% foods.forEach(function(food) { %>
                    <tr>
                        <td><img src="hamburger.jpg" alt="Food Image" style="max-width: 200px; max-height: 120px;"></td>
                        <td>
                            <h3><%= food.name %></h3>
                            <p><%= food.description %></p>
                        </td>
                        <td><%= food.price %> Ft</td>
                        <td><a href="/food/edit/<%= food._id %>"><button type="button" class="btn btn-danger">Módosítás</button></a></td>
                        <td><a href="/food/del/<%= food._id %>"><button type="button" class="btn btn-danger">Törlés</button></a></td>
                    </tr>
                <% }); %>
            </table>
        </div>
    </div>
</div>
<%- include('footer') -%>